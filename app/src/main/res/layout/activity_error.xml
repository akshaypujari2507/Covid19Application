textStyle="bold" />        </LinearLayout>-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="9">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:layout_centerVertical="true"                android:orientation="vertical">                <TextView                    android:id="@+id/msg"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:text="Please Check Internet Connection !!"                    android:textColor="#FF2F2B"                    android:textSize="20sp" />                <ImageView                    android:id="@+id/errorImage"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:layout_marginTop="24dp"                    android:background="@drawable/warning" />                <Button                    android:id="@+id/btnTry"                    android:layout_width="143dp"                    android:layout_height="wrap_content"                    android:background="@drawable/try_again_button"                    android:text="Try Again"                    android:textSize="20sp"                    android:textAllCaps="false"                    android:fontFamily="casual"                    android:textColor="#fff"                    android:textStyle="bold"                    android:layout_gravity="center"                    android:layout_marginTop="24dp"                    android:onClick="onClick"                    android:clickable="true"/>            </LinearLayout>        </